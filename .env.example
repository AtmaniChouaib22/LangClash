# .env.example (copy this to .env.local for each app)

# ======================
# DEVELOPMENT ENVIRONMENT
# ======================

# Database (Docker PostgreSQL for development)
DATABASE_URL="postgresql://langclash_dev:dev_password_123@localhost:5432/langclash_dev"
DIRECT_URL="postgresql://langclash_dev:dev_password_123@localhost:5432/langclash_dev"

# Redis (Docker Redis for development)
REDIS_URL="redis://localhost:6379"

# Supabase (Same for dev and prod - only auth in dev)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# App URLs
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_SOCKET_URL="http://localhost:3001"

# JWT Secret
JWT_SECRET="your-jwt-secret-key"

# Node Environment
NODE_ENV="development"